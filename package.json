{
  "name": "typescript-lock-utility",
  "version": "1.0.0",
  "author": "Michael Chien <michael5107414@gmail.com>",
  "license": "MIT",
  "description": "Typescript Lock Utility",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "^18.18 || ^20.9 || >=21.1"
  },
  "files": [
    "src",
    "dist"
  ],
  "packageManager": "yarn@4.3.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michael5107414/typescript-lock-utility.git"
  },
  "bugs": {
    "url": "https://github.com/michael5107414/typescript-lock-utility/issues"
  },
  "keywords": [
    "lock utility",
    "lock",
    "unique lock",
    "shared lock",
    "reader-writer lock",
    "scoped lock",
    "semaphore",
    "condition variable",
    "typescript 5.2",
    "Symbol.dispose",
    "RAII",
    "resource management"
  ],
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "build": "tsc",
    "build:release": "yarn clean && tsc -p tsconfig.release.json",
    "dev": "yarn build && node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "concurrently -s \"all\" \"eslint --cache\" \"tsc --noEmit\" \"prettier --check .\"",
    "fix": "eslint --cache --fix && prettier --write .",
    "test": "jest --config=jest.config.mjs",
    "coverage": "jest --coverage --config=jest.config.mjs"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/plugin-proposal-explicit-resource-management": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/compat": "^1.1.1",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "concurrently": "^8.2.2",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-class-members": "^1.20.0",
    "husky": "^9.1.1",
    "jest": "30.0.0-alpha.5",
    "prettier": "^3.3.3",
    "rimraf": "6.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.47"
  },
  "resolutions": {
    "glob": ">=10.0.0"
  }
}
